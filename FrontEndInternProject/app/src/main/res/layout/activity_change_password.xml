<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Login.ChangePasswordActivity">

    <!-- Sign up Layout -->
    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/header_color">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/backward"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <!--- Sign up -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone number:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <EditText
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your phone number"
                android:textColorHint="#ccc"
                android:inputType="text"
                android:padding="15dp"/>

            <!-- Error message -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/empty_phone_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Please enter your phone number"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/error_phone_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Enter a valid phone number"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <!-- Password -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="start"/>

                <!-- Show -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="show"
                        android:textColor="@color/selected_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/selected_icon"
                        android:background="@drawable/show"/>

                </LinearLayout>

                <!-- Hide -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hide"
                        android:textColor="@color/selected_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/selected_icon"
                        android:background="@drawable/hide"/>

                </LinearLayout>

            </RelativeLayout>

            <EditText
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:textColorHint="#ccc"
                android:inputType="textPassword"
                android:padding="15dp"/>

            <!-- Error password -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/empty_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Please enter your password"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/error_password_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Has at least 8 character"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/error_password_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Include letters, numbers, and a special character"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <!-- Confirm password -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password:"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="start"/>

                <!-- Show -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="show"
                        android:textColor="@color/selected_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/selected_icon"
                        android:background="@drawable/show"/>

                </LinearLayout>

                <!-- Hide -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hide"
                        android:textColor="@color/selected_icon"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/selected_icon"
                        android:background="@drawable/hide"/>

                </LinearLayout>

            </RelativeLayout>

            <EditText
                style="@style/CustomEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:textColorHint="#ccc"
                android:inputType="textPassword"
                android:padding="15dp"/>

            <!-- Error Confirm password -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*Password do not match"
                    android:textColor="@color/error"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="8dp"
                    android:visibility="gone"/>

            </RelativeLayout>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="10dp"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:backgroundTint="@color/header_color"
                android:layout_marginTop="30dp"/>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>